<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/activity_bg"
    android:layout_marginTop="@dimen/_10sdp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_8sdp"
            >

            <TextView
                android:id="@+id/tv_questionNO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Qes :"
                android:fontFamily="@font/plusjakartasans_semi_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                />
            <TextView
                android:id="@+id/tv_question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_questionNO"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="What is your name?"
                android:fontFamily="@font/plusjakartasans_semi_bold"
                android:textColor="@color/downblack_color"
                android:textSize="@dimen/_11ssp"
                />
            <TextView
                android:id="@+id/tv_answerno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/edt_answer"
                android:text="Ans :"
                android:fontFamily="@font/plusjakartasans_semi_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp"
                />
            <EditText
                android:id="@+id/edt_answer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_answerno"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_question"
                android:text=""
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/bg_roundwhite5"
                android:hint="Give Complete Report"
                android:paddingStart="@dimen/_7sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:paddingTop="@dimen/_7sdp"
                android:fontFamily="@font/plusjakartasans_semi_bold"
                android:textColor="@color/downblack_color"
                android:textSize="@dimen/_9ssp"
                android:visibility="gone"
                />
            
            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_answerno"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_question"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/downblack_color"
                    android:text="Option 1"
                    android:visibility="gone"
                    android:fontFamily="@font/plusjakartasans_semi_bold"/>
                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/downblack_color"
                    android:text="Option 2"
                    android:visibility="gone"
                    android:fontFamily="@font/plusjakartasans_semi_bold"/>
                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/downblack_color"
                    android:text="Option 3"
                    android:visibility="gone"
                    android:fontFamily="@font/plusjakartasans_semi_bold"/>
                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/downblack_color"
                    android:text="Option 4"
                    android:visibility="gone"
                    android:fontFamily="@font/plusjakartasans_semi_bold"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/ll_forchekbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_answerno"
                android:layout_marginStart="@dimen/_5sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_question"
                android:orientation="vertical"
                android:visibility="gone">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check box 1"
                android:textColor="@color/downblack_color"
                android:textSize="@dimen/_10ssp"
                android:visibility="gone"
                android:fontFamily="@font/plusjakartasans_semi_bold"
                />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkbox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check box 2"
                    android:textColor="@color/downblack_color"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone"
                    android:fontFamily="@font/plusjakartasans_semi_bold"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check box 3"
                    android:textColor="@color/downblack_color"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone"
                    android:fontFamily="@font/plusjakartasans_semi_bold"
                    />
                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkbox4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check box 4"
                    android:textColor="@color/downblack_color"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone"
                    android:fontFamily="@font/plusjakartasans_semi_bold"
                    />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_answerno"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_question"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:cardElevation="@dimen/_1sdp"
                android:elevation="0dp"
                android:visibility="visible">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"

                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_aadhaar"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_2sdp"
                        app:cardElevation="@dimen/_1sdp">

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_photo_camera"
                            android:scaleType="fitXY"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_capture_aadhaar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/card_aadhaar"
                        app:layout_constraintTop_toBottomOf="@id/card_aadhaar"
                        app:layout_constraintEnd_toEndOf="@id/card_aadhaar"
                        android:text="Image 1"
                        android:textSize="@dimen/_9ssp"
                        android:textColor="@color/downblack_color"
                        />


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_pan"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        app:layout_constraintStart_toEndOf="@id/card_aadhaar"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_2sdp"
                        app:cardElevation="@dimen/_1sdp">

                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_photo_camera"
                            android:scaleType="fitXY"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_capture_pan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/card_pan"
                        app:layout_constraintTop_toBottomOf="@id/card_pan"
                        app:layout_constraintEnd_toEndOf="@id/card_pan"
                        android:text="Image 2"
                        android:textSize="@dimen/_9ssp"
                        android:textColor="@color/downblack_color"/>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_image3"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        app:layout_constraintStart_toEndOf="@+id/card_pan"
                        android:layout_marginStart="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_2sdp"
                        app:cardElevation="@dimen/_1sdp">

                        <ImageView
                            android:id="@+id/iv3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_photo_camera"
                            android:scaleType="fitXY"
                            />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/tv_image3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/card_image3"
                        app:layout_constraintTop_toBottomOf="@id/card_image3"
                        app:layout_constraintEnd_toEndOf="@id/card_image3"
                        android:text="Image 3"
                        android:textSize="@dimen/_9ssp"
                        android:textColor="@color/downblack_color"
                      />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_image4"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                app:layout_constraintStart_toEndOf="@+id/card_image3"
                android:layout_marginStart="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_2sdp"
                app:cardElevation="@dimen/_1sdp">

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_photo_camera"
                    android:scaleType="fitXY"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_image4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/card_image4"
                app:layout_constraintTop_toBottomOf="@id/card_image4"
                app:layout_constraintEnd_toEndOf="@id/card_image4"
                android:text="Image 4"
                android:textSize="@dimen/_9ssp"
                android:textColor="@color/downblack_color"
                />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>