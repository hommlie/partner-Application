<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:strokeWidth="0dp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_punchicon"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/ic_punch_in"
                android:tint="@color/green"
                />

            <TextView
                android:id="@+id/tv_punch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_punchicon"
                app:layout_constraintEnd_toStartOf="@id/tv_punchtime"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:text="Punch In"
                android:textColor="@color/color_344054"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/plussakartasans_medium"
                android:layout_marginBottom="@dimen/_3sdp"
                />

            <TextView
                android:id="@+id/tv_punchtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="-"
                android:textColor="@color/color_344054"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/plusjakartasans_semi_bold"
                android:layout_marginBottom="@dimen/_3sdp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_punchiconout"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:src="@drawable/ic_punch_out"

                    />

                <TextView
                    android:id="@+id/tv_punchout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_punchiconout"
                    app:layout_constraintEnd_toStartOf="@id/tv_punchtimeout"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:text="Punch Out"
                    android:textColor="@color/color_344054"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/plussakartasans_medium"
                    android:layout_marginBottom="@dimen/_3sdp"
                    />

                <TextView
                    android:id="@+id/tv_punchtimeout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="-"
                    android:textColor="@color/color_344054"
                    android:textSize="@dimen/_11ssp"
                    android:fontFamily="@font/plusjakartasans_semi_bold"
                    android:layout_marginBottom="@dimen/_3sdp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_break"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp">

                <TextView
                    android:id="@+id/tv_break"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Break Time : 02:30:34"
                    android:textColor="@color/red_logout"
                    android:textSize="@dimen/_10ssp"
                    android:fontFamily="@font/inter_regular"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toTopOf="@id/tv_break"
                    app:layout_constraintBottom_toBottomOf="@id/tv_break"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_break"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@color/light_red"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toTopOf="@id/tv_break"
                    app:layout_constraintBottom_toBottomOf="@id/tv_break"
                    app:layout_constraintStart_toEndOf="@id/tv_break"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:background="@color/light_red"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>