<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.jobs.JobDetails"
    android:background="@color/white">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/common_toolbar"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/medium_gray"
        app:layout_constraintTop_toBottomOf="@id/include_toolbar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_colomname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:background="@drawable/bk_for_cupons">

        <TextView
            android:id="@+id/tv_type"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/helvetica"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/black"
            android:text="Order# 67322563"
            android:gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:ellipsize="end"
            android:singleLine="true"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_captureImagebeforejobstart"
            android:layout_width="@dimen/_27sdp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/ic_placeholder_profile"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/medium_gray"
        app:layout_constraintTop_toBottomOf="@id/cl_colomname"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@id/cl_colomname"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_status"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Status"
            app:layout_constraintStart_toEndOf="@+id/iv_status"/>

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/status_autocomplete"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_22sdp"
            android:gravity="center"
            android:textSize="@dimen/_9ssp"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Dispatched"
            android:background="@drawable/btn_apply"
            android:drawableEnd="@drawable/ic_drop"
            android:paddingEnd="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/plusjakartasans_semi_bold"
            android:paddingBottom="2dp"
            android:textColor="@color/black"
            android:inputType="none"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_cust_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_status"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_cust_name"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_service"/>

        <TextView
            android:id="@+id/tv_custname"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Cust Name"
            app:layout_constraintStart_toEndOf="@+id/iv_cust_name"/>

        <TextView
            android:id="@+id/tv_cust_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/tv_custname"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="-"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_cust_name"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_service"/>

        <TextView
            android:id="@+id/tv_serviceTitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Service"
            app:layout_constraintStart_toEndOf="@+id/iv_type"/>

        <TextView
            android:id="@+id/tv_variation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/tv_serviceTitle"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="-"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_variation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_type"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_size"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_category"/>

        <TextView
            android:id="@+id/tv_size_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Size"
            app:layout_constraintStart_toEndOf="@+id/iv_size"/>

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/tv_size_title"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="-"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_variation"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_category"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_category"/>

        <TextView
            android:id="@+id/tv_categrory_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Category"
            app:layout_constraintStart_toEndOf="@+id/iv_category"/>

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/tv_categrory_title"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="-"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_subcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_category"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_subcategory"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_subcategory"/>

        <TextView
            android:id="@+id/tv_subcategory_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Sub-Category"
            app:layout_constraintStart_toEndOf="@+id/iv_subcategory"/>

        <TextView
            android:id="@+id/tv_subcategory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/tv_subcategory_title"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="-"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_starttime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_subcategory"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_starttime"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_start_time"/>

        <TextView
            android:id="@+id/tv_starttime_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Start Time"
            app:layout_constraintStart_toEndOf="@+id/iv_starttime"/>

        <TextView
            android:id="@+id/tv_startTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/tv_starttime_title"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="-"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cl_starttime"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_9sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <ImageView
            android:id="@+id/iv_duration"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_duration"/>

        <TextView
            android:id="@+id/tv_duration_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"

            android:gravity="center"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            android:layout_marginStart="@dimen/_8sdp"
            android:text="Duration"
            app:layout_constraintStart_toEndOf="@+id/iv_duration"/>

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/tv_duration_title"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="-"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_swipebtn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_37sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="@color/ub__transparent"
        app:strokeWidth="0dp">
        <com.hommlie.partner.utils.SwipeButton
            android:id="@+id/swipebtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ub__transparent"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            app:btn_text=""
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="-107dp" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>