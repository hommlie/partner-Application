<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomsheet_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_top_round"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <View
                android:id="@+id/view"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_3sdp"
                android:background="@drawable/rounded_line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_8sdp"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Feedback"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/color_344054"
                android:fontFamily="@font/inter_bold"/>

            <TextView
                android:id="@+id/tv_skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Skip"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/dark_gray"
                android:fontFamily="@font/inter_medium"/>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@drawable/rounded_line"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/tv_enterotp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view1"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Share the feedback about customer"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"/>

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_enterotp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:weightSum="5"
                >

                <TextView
                    android:id="@+id/otpDigit1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ðŸ˜ "
                    android:gravity="center"
                    android:textSize="@dimen/_25ssp"
                    android:textColor="@color/dark_gray"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_6sdp" />

                <TextView
                    android:id="@+id/otpDigit2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ðŸ™"
                    android:textSize="@dimen/_25ssp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/otpDigit3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ðŸ˜"
                    android:textSize="@dimen/_25ssp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/otpDigit4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ðŸ™‚"
                    android:textSize="@dimen/_25ssp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/otpDigit5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="ðŸ˜„"
                    android:textSize="@dimen/_25ssp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/l1"
                android:gravity="center"
                android:weightSum="5"
                app:layout_constraintBottom_toTopOf="@+id/mcv_swipebtn"
                android:layout_marginBottom="@dimen/_15sdp"
                >

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Rude"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/dark_gray"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_1sdp"
                    android:layout_marginEnd="@dimen/_6sdp" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="Uncooperative"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="Okay"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="Friendly"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:text="Very\nCooperative"
                    android:textSize="@dimen/_9ssp"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_swipebtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_37sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_10sdp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="@dimen/_5sdp"
                app:cardBackgroundColor="@color/color_primary"
                app:strokeWidth="0dp">
                <TextView
                    android:id="@+id/swipebtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/_10ssp"
                    android:textAllCaps="true"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:fontFamily="@font/inter_medium"
                    android:gravity="center"
                    />
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>