<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.Light.BottomSheetDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/transparent">
        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_gravity="top|end"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:elevation="@dimen/_5sdp"
            android:background="@drawable/circular_background"
            android:padding="@dimen/_6sdp"
            android:src="@drawable/ic_close"
            android:tint="@android:color/black"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_top_round"
            android:backgroundTint="@color/activity_bg"
            android:theme="@style/Theme.MaterialComponents.Light.BottomSheetDialog">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Details"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/color_344054"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold"
                android:paddingBottom="@dimen/_6sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />
            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="@dimen/_4sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                android:background="@drawable/bg_roundwhite5"
                android:backgroundTint="@color/gray_line_color"
                />

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rv_service"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@id/view"
               />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>