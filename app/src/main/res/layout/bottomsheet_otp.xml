<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomsheet_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_top_round"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/inter_medium"
            android:text="Cancel"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/red_logout"
            />
    <View
        android:id="@+id/view"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_3sdp"
        android:background="@drawable/rounded_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_8sdp"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Enter OTP"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/color_344054"
        android:fontFamily="@font/inter_bold"/>


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@drawable/rounded_line"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        />

    <TextView
        android:id="@+id/tv_enterotp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Ask OTP to verify service :"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_medium"/>

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_enterotp"
            android:text="00:00"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/color_primary"
            android:fontFamily="@font/inter_medium"/>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/tv_enterotp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="6"
        >

        <EditText
            android:id="@+id/otpDigit1"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:background="@drawable/transparent_back_5sdp" />

        <EditText
            android:id="@+id/otpDigit2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_weight="1"
            android:background="@drawable/transparent_back_5sdp" />

        <EditText
            android:id="@+id/otpDigit3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_weight="1"
            android:background="@drawable/transparent_back_5sdp"
            />

        <EditText
            android:id="@+id/otpDigit4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_weight="1"
            android:background="@drawable/transparent_back_5sdp"
            />

        <EditText
            android:id="@+id/otpDigit5"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_weight="1"
            android:background="@drawable/transparent_back_5sdp"
            />

        <EditText
            android:id="@+id/otpDigit6"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="number"
            android:maxLength="1"
            android:gravity="center"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_6sdp"
            android:layout_weight="1"
            android:background="@drawable/transparent_back_5sdp"/>
    </LinearLayout>

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/l1"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Note:"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/color_344054"
            android:fontFamily="@font/inter_bold"/>
        <TextView
            android:id="@+id/tv_notedesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/l1"
            app:layout_constraintBottom_toTopOf="@id/mcv_swipebtn"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintStart_toEndOf="@id/tv_note"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="OTP sent to on customer's provided mobile number"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/inter_regular"/>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_swipebtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_37sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardBackgroundColor="@color/ub__transparent"
            app:strokeWidth="0dp">
            <com.hommlie.partner.utils.SwipeButton
                android:id="@+id/swipebtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/ub__transparent"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp"
                app:btn_text="Verify OTP"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="-107dp" />
        </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>