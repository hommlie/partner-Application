<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.wallet.Wallet"
    android:background="@color/activity_bg">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/common_toolbar"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        app:layout_constraintTop_toBottomOf="@id/include_toolbar"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_13sdp"
        android:layout_marginEnd="@dimen/_13sdp"
        android:background="@null"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:strokeWidth="0dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_13sdp"
                android:text="Coin Balance"
                android:fontFamily="@font/inter_medium"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/app_logo_white"
                android:alpha="0.05"/>

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_30sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:src="@drawable/app_logo_white" />
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv1"
                android:layout_marginTop="@dimen/_1sdp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_13sdp"
                android:text="0"
                android:fontFamily="@font/inter_bold"
                android:textSize="@dimen/_30ssp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/tv_withdraw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_13sdp"
                android:text="Redeem"
                android:fontFamily="@font/inter_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/color_249370"
                android:background="@drawable/circular_background"
                android:paddingStart="@dimen/_13sdp"
                android:paddingEnd="@dimen/_13sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/tv_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/mcv_card"
        android:layout_marginBottom="@dimen/_1sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:text="Transactions"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/text_black"
        />
    <TextView
        android:id="@+id/tv_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_transaction"
        app:layout_constraintBottom_toBottomOf="@id/tv_transaction"
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/color_primary"
        android:text="Jun 2025 "
        android:fontFamily="@font/plussakartasans_medium"
        android:background="@drawable/transparent_back_5sdp"
        android:drawableEnd="@drawable/down_arrow"
        android:backgroundTint="@color/color_primary"
        android:drawableTint="@color/black"
        app:layout_constraintEnd_toEndOf="@id/mcv_card"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_3sdp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_wallet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_transaction"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="@dimen/_10sdp"
        android:paddingStart="@dimen/_2sdp"
        android:paddingEnd="@dimen/_2sdp"
        tools:listitem="@layout/row_wallet"
        android:background="@drawable/bg_top_round"
        />

    <TextView
        android:id="@+id/tv_notransactionfound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rv_wallet"
        app:layout_constraintBottom_toBottomOf="@id/rv_wallet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="No Transaction History Found"
        android:fontFamily="@font/inter_medium"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/color_primary"
        android:visibility="visible"
        />



</androidx.constraintlayout.widget.ConstraintLayout>