<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.leaderboard.Leaderboard"
    android:background="@color/bk_dark">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/common_toolbar"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_options"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@id/include_toolbar"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/bk_dark_card"
        app:cardElevation="0dp"
        android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bk_dark_card">

            <TextView
                android:id="@+id/tv_weekly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_25sdp"
                android:text="Weekly"
                android:fontFamily="@font/inter_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/white"/>

            <View
                android:id="@+id/view_weekly"
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_weekly"
                app:layout_constraintEnd_toEndOf="@id/tv_weekly"
                android:background="@drawable/bk_whatsapp"
                android:backgroundTint="@color/color_primary"
                />

            <TextView
                android:id="@+id/tv_monthly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Monthly"
                android:fontFamily="@font/inter_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/white"/>

            <View
                android:id="@+id/view_monthly"
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_monthly"
                app:layout_constraintEnd_toEndOf="@id/tv_monthly"
                android:background="@drawable/bk_whatsapp"
                android:backgroundTint="@color/color_primary"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_yearly"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_25sdp"
                android:text="Yearly "
                android:fontFamily="@font/inter_medium"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/white"/>

            <View
                android:id="@+id/view_yearly"
                android:layout_width="0dp"
                android:layout_height="@dimen/_2sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_yearly"
                app:layout_constraintEnd_toEndOf="@id/tv_yearly"
                android:background="@drawable/bk_whatsapp"
                android:backgroundTint="@color/color_primary"
                android:visibility="gone"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cl_first"
        android:layout_width="@dimen/_75sdp"
        android:layout_height="@dimen/_75sdp"
        app:layout_constraintTop_toBottomOf="@id/mcv_options"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/color_536724"
        app:strokeWidth="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:cardCornerRadius="@dimen/_45sdp"
        android:elevation="0dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/iv_first_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
    </com.google.android.material.card.MaterialCardView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_king"
        app:layout_constraintStart_toStartOf="@id/cl_first"
        app:layout_constraintEnd_toEndOf="@id/cl_first"
        app:layout_constraintTop_toTopOf="@id/cl_first"
        app:layout_constraintBottom_toTopOf="@id/cl_first"
        />
    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/cl_first"
        app:layout_constraintBottom_toBottomOf="@id/cl_first"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeWidth="0dp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/color_536724"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textColor="@color/white"
            android:gravity="center"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_firstname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vishal Rathaur"
        app:layout_constraintStart_toStartOf="@id/cl_first"
        app:layout_constraintEnd_toEndOf="@id/cl_first"
        app:layout_constraintTop_toBottomOf="@id/cl_first"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/tv_firstpoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10 pts"
        app:layout_constraintStart_toStartOf="@id/cl_first"
        app:layout_constraintEnd_toEndOf="@id/cl_first"
        app:layout_constraintTop_toBottomOf="@id/tv_firstname"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:singleLine="true"
        />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cl_second"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        app:layout_constraintTop_toTopOf="@id/cl_first"
        app:layout_constraintEnd_toStartOf="@id/cl_first"
        app:strokeColor="@color/color_536724"
        app:strokeWidth="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:cardCornerRadius="@dimen/_40sdp">
        <ImageView
            android:id="@+id/iv_second_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/cl_second"
        app:layout_constraintBottom_toBottomOf="@id/cl_second"
        app:layout_constraintStart_toStartOf="@id/cl_second"
        app:layout_constraintEnd_toEndOf="@id/cl_second"
        app:strokeWidth="0dp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/color_536724"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2"
            android:textColor="@color/white"
            android:gravity="center"/>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tv_secondname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vishal Rathaur"
        app:layout_constraintStart_toStartOf="@id/cl_second"
        app:layout_constraintEnd_toEndOf="@id/cl_second"
        app:layout_constraintTop_toBottomOf="@id/cl_second"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/tv_secondpoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10 pts"
        app:layout_constraintStart_toStartOf="@id/cl_second"
        app:layout_constraintEnd_toEndOf="@id/cl_second"
        app:layout_constraintTop_toBottomOf="@id/tv_secondname"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:singleLine="true"
        />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cl_third"
        android:layout_width="@dimen/_65sdp"
        android:layout_height="@dimen/_65sdp"
        app:layout_constraintTop_toTopOf="@id/cl_first"
        app:layout_constraintStart_toEndOf="@id/cl_first"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:strokeColor="@color/color_536724"
        app:strokeWidth="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_40sdp"
        >
        <ImageView
            android:id="@+id/iv_third_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/cl_third"
        app:layout_constraintBottom_toBottomOf="@id/cl_third"
        app:layout_constraintStart_toStartOf="@id/cl_third"
        app:layout_constraintEnd_toEndOf="@id/cl_third"
        app:strokeWidth="0dp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/color_536724"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="3"
            android:textColor="@color/white"
            android:gravity="center"/>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/tv_thirdname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Vishal Rathaur"
        app:layout_constraintStart_toStartOf="@id/cl_third"
        app:layout_constraintEnd_toEndOf="@id/cl_third"
        app:layout_constraintTop_toBottomOf="@id/cl_third"
        android:layout_marginTop="@dimen/_15sdp"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/tv_thirdpoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10 pts"
        app:layout_constraintStart_toStartOf="@id/cl_third"
        app:layout_constraintEnd_toEndOf="@id/cl_third"
        app:layout_constraintTop_toBottomOf="@id/tv_thirdname"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_11ssp"
        android:fontFamily="@font/plusjakartasans_bold"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:singleLine="true"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_secondpoint"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_top_round"
        android:layout_marginTop="@dimen/_25sdp"
        android:backgroundTint="#0A0814"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recylerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            tools:listitem="@layout/row_leaderbaord"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>