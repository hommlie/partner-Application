<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomsheet_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_top_round"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        >

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_3sdp"
            android:background="@drawable/rounded_line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Refer &amp; Earn"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/color_344054"
            android:fontFamily="@font/inter_bold"/>

        <TextView
            android:id="@+id/tv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Skip"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/inter_medium"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@drawable/rounded_line"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/tv_have"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view1"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Have you explain the referral process to customer?"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_medium"/>
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_have"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rd_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yes"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"/>
            <RadioButton
                android:id="@+id/rd_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_5sdp"/>

        </RadioGroup>

        <TextView
            android:id="@+id/tv_lets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/radio_group"
            android:layout_marginTop="@dimen/_13sdp"
            android:text="@string/let_s_collect_customer_details"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/color_primary"
            android:gravity="center"
            android:fontFamily="@font/inter_medium"/>
        <TextView
            android:id="@+id/tv_customername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_lets"
            android:layout_marginTop="@dimen/_18sdp"
            android:text="Name"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/color_344054"
            android:layout_marginStart="@dimen/_2sdp"
            android:fontFamily="@font/inter_medium"/>

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_customername"
            android:background="@drawable/transparent_back_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:hint="Enter customer name"
            android:backgroundTint="@color/gray_border"
            android:textSize="@dimen/_12ssp"
            android:paddingStart="@dimen/_13sdp"
            android:paddingEnd="@dimen/_13sdp"
            android:gravity="center_vertical"
            android:textColorHint="@color/medium_gray"
            android:textColor="@color/color_344054"
            android:inputType="textCapWords"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/tv_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/edt_name"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Contact Number"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/color_344054"
            android:layout_marginStart="@dimen/_2sdp"
            android:fontFamily="@font/inter_medium"/>

        <EditText
            android:id="@+id/edt_mobileno"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_customer"
            android:background="@drawable/transparent_back_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:backgroundTint="@color/gray_border"
            android:hint="Enter mobile number"
            android:textSize="@dimen/_12ssp"
            android:paddingStart="@dimen/_13sdp"
            android:paddingEnd="@dimen/_13sdp"
            android:gravity="center_vertical"
            android:textColorHint="@color/medium_gray"
            android:textColor="@color/color_344054"
            android:inputType="number"
            android:maxLength="10"
            android:singleLine="true"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcv_swipebtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_37sdp"
            android:layout_marginTop="@dimen/_50sdp"
            app:layout_constraintTop_toBottomOf="@id/edt_mobileno"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_10sdp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardBackgroundColor="@color/color_primary"
            app:strokeWidth="0dp">
            <TextView
                android:id="@+id/swipebtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/_11ssp"
                android:textAllCaps="true"
                android:text="Submit"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_medium"
                android:gravity="center"
                />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>